 <h1>New Song</h1>
  <div class="container-fluid">
    <form action="/albums/new" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="title">Song Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Enter song title">
      </div>
   
      <div class="form-group">
        <label for="genre">Album</label>
        <select class="form-control" id="albumID" name="albumID">
          {{#each data}}
          <option label="{{title}}">{{albumID}}</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label for="albumCover">Song File Upload</label>
        <input type="file" class="form-control" id="songFile" name="songFile">
      </div>
      </br>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>